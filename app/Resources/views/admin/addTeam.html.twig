{% extends 'layout/layout.html.twig' %}
{% block title %}{% trans %}Add Team{% endtrans %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block content %}
    <div id="page-wrapper" style=" min-height: 1043px;">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                    <h2>Add new team
                    </h2>
                    <hr class="colorgraph">
                    {{ form_errors(form) }}
                    {{ form_row(form.name, { 'attr': {'class': 'form-control input-lg'}}) }}
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" tabindex="8">Save
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}