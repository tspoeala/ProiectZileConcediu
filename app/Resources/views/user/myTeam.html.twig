{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div id="page-wrapper" style=" min-height: 1500px;" align="center">
        {% if not is_granted(expression('"ROLE_ADMIN" in roles ')) %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ app.user.team|capitalize }} team</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
        {% endif %}
        <!-- /.row -->
        <div class="row">
            <div class="panel-heading" style="width: 1100px;">
                <div id='calendar'></div>
            </div>
        </div>
        <!-- /.row -->
        {% if is_granted(expression('"ROLE_USER" in roles ')) %}
            <div class="row">
                <div class="col-lg-8">
                    <!-- /.panel -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bell fa-fw"></i> My Team
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Firstname</th>
                                            <th>Lastname</th>
                                            <th>Username</th>
                                            <th>Email</th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for userFromTeam in usersFromTeam %}
                                            <tr>
                                                <td>{{ userFromTeam.id }}</td>
                                                <td>{{ userFromTeam.firstname }}</td>
                                                <td>{{ userFromTeam.lastname }}</td>
                                                <td>{{ userFromTeam.username }}</td>
                                                <td>{{ userFromTeam.email }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    {% if daysOffFromUser is not empty %}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="fa fa-clock-o fa-fw"></i> Your Days Off
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped">
                                        <thead>
                                        <tr>
                                            <th>Type</th>
                                            <th>DateStart</th>
                                            <th>DateEnd</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for dayOffFromUser in daysOffFromUser %}
                                            <tr data-id="{{ dayOffFromUser.id }}">
                                                <td>{{ dayOffFromUser['type'] }}</td>
                                                <td>{{ dayOffFromUser['dayStart'] }}</td>
                                                <td>{{ dayOffFromUser['dayEnd'] }}</td>
                                                <td>
                                                    <a href="/deleteDayOff/{{ dayOffFromUser.id }}">
                                                        <i type="button" data-id=""
                                                           class="btn btn-sm btn-success btn-danger">Delete
                                                        </i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                    {% endif %}
                </div>
                <!-- /.col-lg-8 -->
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bell fa-fw"></i> Add Days Off
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {% for message in app.flashes('warning') %}
                                <div class="alert alert-warning">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <form method="post">
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <select id="type" name="type" required="required" class="form-control btn-md">
                                            <option value="CO" selected="selected">Concediu de odihna</option>
                                            <option value="WH">Work from home</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <input type="text" name="daterange" id="daterange"
                                               style="width: 175px;height: 40px; margin-top: 5px;"/>
                                        <button type="submit" class="btn btn-primary">Save
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.panel-body -->
                    </div>


                </div>
                <!-- /.col-lg-4 -->
            </div>
        {% endif %}
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script>
            var array = '{{ freeAndDayOff|raw }}';
            var freeDays = '{{ freeDays|raw }}';
            var daysOff = '{{ daysOff|raw }}';

        </script>
        <script type="text/javascript" src="{{ asset('build/dayOff.js') }}"></script>

    {% endblock %}
