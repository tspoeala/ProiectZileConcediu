{% extends 'layout/layout.html.twig' %}
{% block title %}Registration{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                <h2>Please Sign Up
                    <small>It's free and always will be.</small>
                </h2>
                <hr class="colorgraph">
                {{ form_errors(form) }}
                {#{{ form_errors(form, {'attr': {'class': 'form-group alert-danger'}}) }}#}
                {{ form_row(form.firstname, { 'attr': {'class': 'form-control input-lg'}}) }}
                {{ form_row(form.lastname, { 'attr': {'class': 'form-control input-lg'} }) }}
                {{ form_row(form.team, { 'attr': {'class': 'form-control input-lg'} }) }}
                {{ form_row(form.username, { 'attr': {'class': 'form-control input-lg'} }) }}
                {{ form_row(form.email, { 'attr': {'class': 'form-control input-lg'} }) }}
                {{ form_row(form.plainPassword.first, { 'attr': {'class': 'form-control input-lg'} }) }}
                {{ form_row(form.plainPassword.second, { 'attr': {'class': 'form-control input-lg'} }) }}
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <button type="submit" class="btn btn-primary btn-block btn-lg" tabindex="8">Register
                        </button>
                    </div>
                    <div class="col-xs-12 col-md-6"><a href="../login" class="btn btn-success btn-block btn-lg">Sign
                                                                                                                In</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
